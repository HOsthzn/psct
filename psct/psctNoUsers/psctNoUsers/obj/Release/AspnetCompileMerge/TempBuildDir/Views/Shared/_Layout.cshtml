    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>
<body class="is-preload">

<!-- Header -->
<div id="header">

    <div class="top">

        <!-- Logo -->
        <div id="logo">
            <span class="image avatar48">
                <img src="~/Content/logos/New logo 2.png" alt="Projected SHE Consultants and Training Logo"/>
            </span>
        </div>

        <!-- Nav -->
        <nav id="nav">
            <ul>
                <li>
                    <a href="#top" id="top-link">
                        <span class="bi bi-house-door-fill">Intro</span>
                    </a>
                </li>
                <li>
                    <a href="#portfolio" id="portfolio-link">
                        <span class="bi bi-collection-play-fill">Portfolio</span>
                    </a>
                </li>
                <li>
                    <a href="#about" id="about-link">
                        <span class="bi bi-info-circle-fill">About Me</span>
                    </a>
                </li>
                <li>
                    <a href="#WhyUs" id="whyUs-link">
                        <span class="bi bi-question-circle-fill">Why Us?</span>
                    </a>
                </li>
                <li>
                    <a href="#contact" id="contact-link">
                        <span class="bi bi-envelope-at-fill">Contact</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="bottom">
        <!-- Social Icons -->
        <ul class="icons">
            <li>
                <a href="https://www.facebook.com/Psct.co.za" class="icon brands">
                    <i class="bi bi-facebook"></i>
                </a>
            </li>
            <li>
                <a href="#" class="icon">
                    <i class="bi bi-file-pdf-fill"></i>
                </a>
            </li>
        </ul>

    </div>

</div>

<!-- Main -->
<main id="main">

    @RenderBody( )

</main>

<!-- Footer -->
<div id="footer">

    <!-- Copyright -->
    <ul class="copyright">
        <li>&copy; Projected Safety Consultancy &amp; TRAINING (PTY) LTD.</li>
    </ul>

</div>

@Scripts.Render( "~/bundles/js" )
@RenderSection( "scripts", required: false )

</body>
</html>