        <div class="row">

            @* loop over ViewBag.imgGroups *@
            @foreach ( var imgGroup in ViewBag.imgGroups )
            {
                <div class="col-4 col-12-mobile">
                    @foreach ( string img in imgGroup )
                    {
                        if ( img.EndsWith( ".mp4" ) || img.EndsWith( ".MP4" ) )
                        {
                            <article class="item">
                                <a href="#" class="image fit">
                                    <video width="320" height="240" controls>
                                        <source src="~/Content/resources/@img" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                </a>
                            </article>
                        }
                        else
                        {
                            <article class="item">
                                <a href="#" class="image fit">
                                    <img src="~/Content/resources/@img" alt=""/>
                                </a>
                            </article>
                        }
                    }
                </div>
            }
        </div>

    </div>
</section>

